<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="42dp">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:fontFamily="@font/amarante"
                android:gravity="center"
                android:text="Show list"
                android:textColor="@color/colorOrangeDark"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:text="With the city"
                android:textColor="@color/colorOrangeDark" />

            <TextView
                android:id="@+id/fromCity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:text="In the city"
                android:textColor="@color/colorOrangeDark" />

            <TextView
                android:id="@+id/toCity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textColor="@color/colorOrangeDark" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="@color/colorOrangeDark" />

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cost"
                android:textColor="@color/colorOrangeDark" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="TextView" />

            <Button
                android:id="@+id/button3"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:background="@color/colorOrangeDark"
                android:onClick="onReserveClicked"
                android:text="Reserve Place"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>